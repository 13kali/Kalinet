: IF                ( -- a | a: br cell addr )
    COMPILE (?br) H@ 2 ALLOT ( br cell allot )
; IMMEDIATE
: THEN              ( a -- | a: br cell addr )
    DUP H@ -^ SWAP ( a-H a ) !
; IMMEDIATE
: ELSE              ( a1 -- a2 | a1: IF cell a2: ELSE cell )
    COMPILE (br)
    2 ALLOT
    DUP H@ -^ SWAP  ( a-H a )
    !
    H@ 2-          ( push a. -2 for allot offset )
; IMMEDIATE

